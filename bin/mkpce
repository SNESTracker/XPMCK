#!/bin/bash
# usage: mksms derp.mml
# will output: derp.sms

if [ "$1" = "" ]; then
	echo "Usage example: mksms derp.mml"
	printf "\toutputs: derp.sms\n"
	exit 1
fi
curdir="$PWD"
fn_noext=`basename "${1%.*}"`
pce_dir="$XPMCK_DIR/demo/pce"
xpmc -pce "$1" "${pce_dir}/pcemusic.asm"

pushd "${pce_dir}"
# you must call your output file smsmusic.asm and this file must be in demo/sms_gg
wla-huc6280 -vo hes.asm sap.o
wlalink -rS sap.link "$curdir/${fn_noext}.pce"
wlalink -bS sap.link "$curdir/${fn_noext}.bin"
bin2hes "$curdir/${fn_noext}.bin" "$curdir/${fn_noext}.hes"
rm sap.o
popd

#rm "$curdir/${fn_noext}.bin"
